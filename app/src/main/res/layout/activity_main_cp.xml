<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <include
        android:id="@+id/toolbarid"
        layout="@layout/toolbar"
        android:layout_centerHorizontal="true"/>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollviewid"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/jewerly1"
                android:layout_below="@+id/toolbarid"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Nama Company"
                android:layout_gravity="center"
                android:textSize="25sp"
                android:textStyle="bold"
                android:id="@+id/judulid"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/image1"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="About Us"
                android:id="@+id/aboutusid"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/judulid"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/paragraphid"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/description_text"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/aboutusid"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Contact Us"
                android:id="@+id/contactusid"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/paragraphid"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/paragraph2id"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/contact_us"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/contactusid"
                android:layout_centerHorizontal="true" />

        </LinearLayout>

    </ScrollView>



</RelativeLayout>